{
  "name": "server",
  "version": "0.0.0",
  "description": "server side",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node dist/.\"",
    "clear": "rimraf dist",
    "compile": "tsc",
    "serve": "node dist/.",
    "build": "yarn build:codegen && yarn clear && yarn compile",
    "build:codegen": "yarn codegen:graphql & yarn codegen:prisma",
    "build:dev": "yarn codegen:database && yarn build",
    "codegen:graphql": "graphql-codegen --config codegen.ts",
    "codegen:database": "prisma db pull",
    "codegen:prisma": "prisma generate",
    "migrate:diff": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/migrations/0_init/migration.sql",
    "migrate:resolve": "prisma migrate resolve --applied 0_init",
    "migrate:dev": "prisma migrate dev"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.7.1",
    "@graphql-codegen/cli": "5.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/module-alias": "^2.0.2",
    "@types/ms": "^0.7.32",
    "@types/node": "^20.7.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.4",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@graphql-yoga/plugin-jwt": "^1.1.0",
    "@prisma/client": "^5.3.1",
    "@whatwg-node/server-plugin-cookies": "^1.0.2",
    "bcrypt": "^5.1.1",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.22.2",
    "graphql-yoga": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "prisma": "^5.3.1"
  }
}
