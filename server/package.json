    "nodemon": "^3.0.1",
    "rimraf": "^5.0.4",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "graphql": "^16.8.1",
    "graphql-yoga": "^4.0.4"
  }
}
